<Window x:Class="AdminSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin System" Height="450" Width="800" Icon="/icon.ico">
    <Grid Background="#34495E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель входа -->
        <Border x:Name="LoginPanel" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,75,0,0" Background="White" CornerRadius="10" Opacity="0.9" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Добро пожаловать в систему!" Margin="10" FontSize="20" FontWeight="Bold" Foreground="#34495E" HorizontalAlignment="Center" Grid.Row="0"/>
                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock Text="Логин" Margin="0,0,0,5" FontSize="16" FontWeight="Bold"/>
                    <TextBox x:Name="LoginUsernameTextBox" Width="300" Height="30" Margin="0,0,0,10" FontSize="14"/>
                    <TextBlock Text="Пароль" Margin="0,0,0,5" FontSize="16" FontWeight="Bold"/>
                    <PasswordBox x:Name="LoginPasswordTextBox" Width="300" Height="30" Margin="0,0,0,10" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Войти" Click="Login_Click" Width="150" Height="36" FontSize="16" FontWeight="Bold" Background="#3498DB" Foreground="White" BorderBrush="#3498DB" BorderThickness="1" Margin="10"/>
                    <Button Content="Зарегистрироваться" Click="Register_Click" Width="200" Height="36" FontSize="16" FontWeight="Bold" Background="#3498DB" Foreground="White" BorderBrush="#3498DB" BorderThickness="1" Margin="10"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель администратора -->
        <Border x:Name="AdminPanel" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Margin="20" Background="White" CornerRadius="10" Opacity="0.9">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Панель администратора" Margin="10" FontSize="20" FontWeight="Bold" Foreground="#34495E" HorizontalAlignment="Center" Grid.Row="0"/>
                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock Text="Старый логин:" Margin="0,0,0,5" FontSize="16" FontWeight="Bold"/>
                    <TextBox x:Name="OldUsernameTextBox" Width="300" Height="30" Margin="0,0,0,10" FontSize="14"/>
                    <TextBlock Text="Новый логин:" Margin="0,0,0,5" FontSize="16" FontWeight="Bold"/>
                    <TextBox x:Name="NewUsernameTextBox" Width="300" Height="30" Margin="0,0,0,10" FontSize="14"/>
                    <TextBlock Text="Новый пароль:" Margin="0,0,0,5" FontSize="16" FontWeight="Bold"/>
                    <PasswordBox x:Name="NewPasswordTextBox" Width="300" Height="30" Margin="0,0,0,10" FontSize="14"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Изменить" Click="ChangeAdminInfoButton_Click" Width="150" Height="36" FontSize="16" FontWeight="Bold" Background="#3498DB" Foreground="White" BorderBrush="#3498DB" BorderThickness="1" Margin="10"/>
                    <Button Content="Посмотреть логины и пароли" Click="ViewLoginAndPasswordsButton_Click" Width="250" Height="36" FontSize="16" FontWeight="Bold" Background="#3498DB" Foreground="White" BorderBrush="#3498DB" BorderThickness="1" Margin="10"/>
                    <Button Content="Журнал" Click="ViewActionLogButton_Click" Width="150" Height="36" FontSize="16" FontWeight="Bold" Background="#3498DB" Foreground="White" BorderBrush="#3498DB" BorderThickness="1" Margin="10"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Удалить администратора" Click="DeleteAdministratorButton_Click" Width="250" Height="36" FontSize="16" FontWeight="Bold" Background="#3498DB" Foreground="White" BorderBrush="#3498DB" BorderThickness="1" Margin="10"/>
                    <Button Content="Выйти" Click="LogoutButton_Click" Width="150" Height="36" FontSize="16" FontWeight="Bold" Background="#3498DB" Foreground="White" BorderBrush="#3498DB" BorderThickness="1" Margin="10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
